<div class='jumbotron'>
<h4>Graduation Details</h4>
<hr class="colorgraph">
<table class="table">
  <thead>
    <tr>
      <th>Course</th>
      <th>Institute</th>
      <th>Passout year</th>
      <th>Score</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @education_details.each do |education_detail| %>
      <tr>
        <td><%= education_detail.course %></td>
        <td><%= education_detail.institute %></td>
        <td><%= education_detail.passout_year %></td>
        <td><%= education_detail.score %></td>
        <td><%= education_detail.user_id %></td>
       
        <td><%= link_to 'Edit', edit_education_detail_path(education_detail), :class => "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', education_detail, method: :delete, data: { confirm: 'Are you sure?' },:class => "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

