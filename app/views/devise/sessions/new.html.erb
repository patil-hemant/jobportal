<div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
<h2>Log in</h2>
	<hr class="colorgraph">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div>
  <%= f.email_field :email, autofocus: true, :class=>"form-control input-lg", :placeholder=>"Email Address" %></div>
  <br>
  <div>
    <%= f.password_field :password, autocomplete: "off", :class=>"form-control input-lg", :placeholder=>"Password" %>
  </div>
	<hr class="colorgraph">
 
  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Log in", :class => "btn btn-success"%></div>

<% end %>

<%= render "devise/shared/links" %>
</div>
</div>